<input type='hidden' name='id' value='<%= params[:id] %>'> 
<input type='hidden' name='pay' value='@maxcatman'>
<input type='hidden' name='title' value='Pedicab Lights'>
<input type='hidden' name='desc' value='Your kit will come with hookup wire, heatshrink, and mounting tape.  All mounted strands will come in pre-made lengths of tubing.  Pole strands will come with foam.'>
<% if params[:order] %>
<fieldset id='order'>
<legend>order</legend>
<%= venmo_order(params) %>
</fieldset>
<% else %>
<fieldset id='kits'>
<fieldset><legend>
<select name='order[frame][style]'>
